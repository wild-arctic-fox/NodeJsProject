<h2>{{title}}</h2>

{{#if courses.length}}
<div class="table-container blue lighten-4">
    <table>
        <thead>
            <th>Name</th>
            <th>Amount</th>
            <th>Action</th>
        </thead>
        <tbody>
            {{#each courses}}
            <tr>
                <td>{{name}}</td>
                <td>{{count}}</td>
                <td><input type="button" data-id="{{_id}}" name="delete"
                class="btn" value="Delete" data-csrf="{{@root.csrf}}"></td>
            </tr>
            {{/each}}
        </tbody>
        <tfoot>
            <tr>
                <td colspan="3">
                    <h5>Price: {{price}} $</h5>
                </td>
            </tr>
        </tfoot>
    </table>
    <form action="/orders" method="post">
    <input type="hidden" name="_csrf" value="{{csrf}}">
        <input type="submit" class="btn">
    </form>
</div>
{{else}}
<div>Empty cart</div>
{{/if}}